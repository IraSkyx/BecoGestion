      <link rel="stylesheet" href="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/bgbill/css/becogestion-bill.css') }}" type="text/css" />

    {% endblock %}
  </head>

  <body>
    <div class="container-fluid">

      <!-- Header -->
