        <th class="column criterion rotate-45"><div><span>Bureau Contrôle BTP consultants</span></div></th>
        <th class="column criterion rotate-45"><div><span>MOEX</span></div></th>
        <th class="column criterion rotate-45"><div><span>MR DA CONCEICAO</span></div></th>
        <th class="column criterion rotate-45"><div><span>ETANCHEITE</span></div></th>
        <th class="column criterion rotate-45"><div><span>ELECTRICIEN </span></div></th>
        <th class="column criterion rotate-45"><div><span>MENUISERIE EXT</span></div></th>
        <th class="column criterion rotate-45"><div><span>MENUISERIE INT</span></div></th>
        <th class="column criterion rotate-45"><div><span>TERRASSIER</span></div></th>
        <th class="column criterion rotate-45"><div><span>ARMATURIER</span></div></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="row-header">Row header 1</td>
        <td><input checked="checked" name="column1[]" type="radio" value="row1-column1"></td>
        <td><input checked="checked" name="column2[]" type="radio" value="row1-column2"></td>
        <td><input name="column3[]" type="radio" value="row1-column3"></td>
        <td><input name="column4[]" type="radio" value="row1-column4"></td>
        <td><input name="column5[]" type="radio" value="row1-column5"></td>
        <td><input name="column6[]" type="radio" value="row1-column6"></td>
