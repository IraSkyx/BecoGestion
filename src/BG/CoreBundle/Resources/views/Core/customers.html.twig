{% extends "BGCoreBundle::layout.html.twig" %}

{% block body %}

  {{ include('BGCoreBundle::menu.html.twig', { 'route': 'BG_CoreBundle_customer', 'parameters': {}  }) }}

  <div class="container-fluid card wizard-card" data-color="blue">

    <div class="wizard-header">
      <h3 class="wizard-title">{{ title }}</h3>
      <hr>
    </div>

    {{ form_start(form) }}
      {{ form_errors(form) }}
        <div class="well justify-content-center">
          <div class="row justify-content-center">
            {{ form_row(form.companyName) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.siren) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.intra) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.phone) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.mail) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.address) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.postcode) }}
          </div>
          <div class="row justify-content-center">
            {{ form_row(form.city) }}
          </div>
        </div>
        <div class="form-group" align="center">{{ form_widget(form.save, {'attr': {'class': 'btn-info'}}) }}</div>
      {{ form_rest(form) }}
    {{ form_end(form) }}

  </div>

  {{ parent() }}

{% endblock %}
